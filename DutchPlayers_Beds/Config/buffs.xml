			<requirement name="PlayerLevel" target="self" operation="GT" value="100"/>
				<passive_effect name="HypothermalResist" operation="base_add" value="10"/>
				<passive_effect name="HyperthermalResist" operation="base_add" value="20"/>
        <passive_effect name="WaterChangeOT" operation="base_subtract" value="50" />
        <passive_effect name="HealthChangeOT" operation="base_add" value="0.2"/>
			</effect_group>
		</buff>

<!-- buff Military -->
		<buff name="SleepingBuffMilitary"  name_key="Sleeping" description_key="Sleeping in an old bed slowly regenerates health and keeps you warm. Buff 4." tooltip_key="Soldiers are the greatest people in this world. Stay safe." icon="ui_game_symbol_map_bed">
