<?xml version="1.0" encoding="utf-8"?>

<configs>

	<append xpath="buffs">

<!-- buff 1 -->
		<buff name="SleepingBuff1"  name_key="Sleeping" description_key="Sleeping in an old bed slowly regenerates health and keeps you warm" tooltip_key="You're resting in your bed" icon="ui_game_symbol_map_bed">
			<stack_type value="ignore"/>
			<duration value="1"/>
			<effect_group>
				<requirement name="PlayerLevel" target="self" operation="GT" value="50"/>
        
				<passive_effect name="HypothermalResist" operation="base_add" value="50"/>
        <passive_effect name="WaterChangeOT" operation="base_subtract" value="25" />

			</effect_group>
		</buff>

<!-- buff 2 -->
		<buff name="SleepingBuff2"  name_key="Sleeping" description_key="Sleeping in an old bed slowly regenerates health and keeps you warm" tooltip_key="Sleep well babe" icon="ui_game_symbol_map_bed">
			<stack_type value="ignore"/>
			<duration value="1"/>
			<effect_group>
				<requirement name="PlayerLevel" target="self" operation="GT" value="50"/>
        
				<passive_effect name="HyperthermalResist" operation="base_add" value="50"/>
				<passive_effect name="WaterChangeOT" operation="base_subtract" value="25" />
        <passive_effect name="HypothermalResist" operation="base_add" value="50"/>
				</effect_group>
		</buff>

<!-- buff 3 -->
		<buff name="SleepingBuff3"  name_key="Sleeping" description_key="Sleeping in an modern bed slowly regenerates health and keeps you warm." tooltip_key="Is it lazy sunday, or what?" icon="ui_game_symbol_map_bed">
			<stack_type value="ignore"/>
			<duration value="1"/>
			<effect_group>
				<requirement name="PlayerLevel" target="self" operation="GT" value="50"/>
        
        <passive_effect name="StaminaMaxModifierOT" operation="base_add" value="1" />
        <passive_effect name="HealthMaxModifierOT" operation="base_add" value="0.25" />
        <passive_effect name="WaterChangeOT" operation="base_subtract" value="25" />
        <passive_effect name="HypothermalResist" operation="base_add" value="50"/>

        <triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$foodAmount" operation="set" value="-0.25"/>
			</effect_group>
		</buff>

<!-- buff 4 -->
		<buff name="SleepingBuff4"  name_key="Sleeping" description_key="Sleeping in an modern bed slowly regenerates health and keeps you warm." tooltip_key="Good night tiger" icon="ui_game_symbol_map_bed">
			<stack_type value="ignore"/>
			<duration value="1"/>
			<effect_group>
				<requirement name="PlayerLevel" target="self" operation="GT" value="50"/>
        
				<passive_effect name="HealthChangeOT" operation="base_add" value="0.5"/>
        <passive_effect name="HypothermalResist" operation="base_add" value="50"/>
        <passive_effect name="WaterChangeOT" operation="base_subtract" value="50" />
			</effect_group>
		</buff>

<!-- buff 5 -->
		<buff name="SleepingBuff5"  name_key="Horny" description_key="Being horny on this bed..." tooltip_key="This bed is good enough to fuck your mother" icon="ui_game_symbol_map_bed">
			<stack_type value="ignore"/>
			<duration value="1"/>
			<effect_group>
				<requirement name="PlayerLevel" target="self" operation="GT" value="80"/>
        
				<passive_effect name="AttributeLevel" tags="attPerception" operation="base_subtract" value="1" />
				<passive_effect name="AttributeLevel" tags="attStrength" operation="base_subtract" value="1" />
        <passive_effect name="WaterChangeOT" operation="base_subtract" value="50" />
        <passive_effect name="HypothermalResist" operation="base_add" value="50"/>
        <passive_effect name="StaminaMaxModifierOT" operation="base_subtract" value="0.5" />
        <passive_effect name="HealthChangeOT" operation="base_add" value="0.5"/>

        <triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$foodAmount" operation="set" value="-0.5"/>
			</effect_group>
		</buff>

<!-- buff 6 -->
		<buff name="SleepingBuff6"  name_key="Daysleep" description_key="Sleeping on a daybed slowly regenerates stamina and keeps you warm." tooltip_key="Is it save enough for a f'k'ng daysleep?!" icon="ui_game_symbol_map_bed">
			<stack_type value="ignore"/>
			<duration value="1"/>
